<!-- card -->
<div class='container mt-5'>
    <table class="table">
        <thead>
          <tr>
            <th scope="col" style='width: 33%'>신용카드 번호</th>
            <th scope="col" style='width: 33%'>신용카드 종류</th>
            <th scope="col" style='width: 20%'>신용카드 유효기간</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
        <% for(let card of card_info){ %>
          <tr>
            <th scope="row" style='vertical-align: middle'><%= card.card_uid %></th>
            <td style='vertical-align: middle'><%= card.card_com %></td>
            <td style='vertical-align: middle'><%= card.card_exp %></td>
            <td>
                <div class="btn-group" role="group" aria-label="Basic outlined example">
                    <button type="button" class="btn btn-outline-primary" onclick="location.href='/myPage/updateCard/<%= card.card_uid %>'">수정</button>
                    <form action='/myPage/deleteCard/<%= card.card_uid %>?_method=DELETE' method='post'>
                      <button type="submit" class="btn btn-outline-primary">삭제</button>
                    </form>
                </div>
            </td>
          </tr>
        <%}%>
        </tbody>
    </table>
    <button type="button" class="btn btn-primary" onclick="location.href='/myPage/addCard'">추가</button>
</div>

<!-- dest -->
<div class='container mt-5'>
    <table class="table">
        <thead>
          <tr>
            <th scope="col" style='width: 33%'>우편번호</th>
            <th scope="col" style='width: 33%'>기본주소</th>
            <th scope="col" style='width: 20%'>상세주소</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
        <% for(let dest of dest_info){ %>
          <tr>
            <th scope="row" style='vertical-align: middle'><%= dest.destination_post %></th>
            <td style='vertical-align: middle'><%= dest.destination_addr %></td>
            <td style='vertical-align: middle'><%= dest.destination_detail %></td>
            <td>
              <div class="btn-group" role="group" aria-label="Basic outlined example">
                <button type="button" class="btn btn-outline-primary" onclick="location.href='/myPage/updateDest/<%= dest.destination_uid %>'">수정</button>
                <form action='/myPage/deleteDest/<%= dest.destination_uid %>?_method=DELETE' method='post'>
                  <button type="submit" class="btn btn-outline-primary">삭제</button>
                </form>
            </div>
            </td>
          </tr>
        <%}%>
        </tbody>
    </table>
    <button type="button" class="btn btn-primary" onclick="location.href='/myPage/addDest'">추가</button>
</div>