<!-- updateCard -->
<div class='w-50 container mt-5'>
    <form id='frm' action='/myPage/updateDest/<%= dest_info[0].destination_uid %>?_method=PATCH' method='post'>
      <div class="col-auto mb-3">
        <label class="col-form-label">우편번호</label>
        <input name='destination_post' data-name='우편번호' type="text" class="form-control" value='<%= dest_info[0].destination_post %>' required>
      </div>
      <div class="col-auto mb-3">
        <label class="col-form-label">기본주소</label>
        <input name='destination_addr' data-name='기본주소' type="text" class="form-control" value='<%= dest_info[0].destination_addr %>' required>
      </div>
      <div class="col-auto mb-5">
        <label class="col-form-label">상세주소</label>
        <input name='destination_detail' data-name='상세주소' type="text" class="form-control" value='<%= dest_info[0].destination_detail %>' required>
      </div>
      <div class="col-auto">
        <button type="submit" class="w-100 btn btn-primary btn-lg" style='height: 65px';>확인</button>
      </div>
    </form>
</div>